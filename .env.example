# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Flask Configuration
SECRET_KEY=generate-a-strong-random-key-here
FLASK_ENV=development
FLASK_DEBUG=False

# Email Service Keys (optional)
HUNTER_API_KEY=your-hunter-api-key-here
MAILTESTER_API_KEY=your-mailtester-api-key-here
INSTANTLY_API_KEY=your-instantly-api-key-here

# Apollo Configuration (optional)
APOLLO_API_KEY=your-apollo-api-key-here

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///data/leads.db

# Logging
LOG_LEVEL=INFO

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Provider Selection (auto uses free providers only)
DEFAULT_PROVIDER=auto